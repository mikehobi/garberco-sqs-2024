<div class="page js-page" data-type="index" data-id="{collection.id}">
    <section class="index js-index grid" data-target="garberco" data-id="{collection.id}">
        {.section collection}
            {.repeated section collections}
                <div class="grid__item expander-bottom">
                    <a href="{fullUrl}" class="grid__photo js-index-tile animate js-animate" data-title="{title}">
                        {.section mainImage}
                            {@|apply image.block}
                        {.end}
                    </a>
                </div>
            {.end}
        {.end}
    </section>
</div>