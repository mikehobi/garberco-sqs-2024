<section class="homepage js-homepage grid js-grid">
    {.section collection}
        {.repeated section collections}
            <a href="{fullUrl}" class="grid__item animate js-animate expander-bottom js-project-tile js-router--ignore" data-title="{title}">
                {.section mainImage}
                    {@|apply image.block}
                {.end}
            </a>
        {.end}
    {.end}
</section>