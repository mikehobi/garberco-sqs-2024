<section class="grid js-grid">
    {.section collection}
        {.repeated section collections}
            <a href="{fullUrl}" class="grid__item animate js-animate expander-bottom js-project-tile js-router--ignore">
                {.section mainImage}
                    {@|apply image.block}
                {.end}
                <h1 class="grid__lock h4">{title}</h1>
            </a>
        {.end}
    {.end}
</section>