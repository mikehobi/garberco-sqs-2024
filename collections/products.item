
{.section item}






{.repeated section items}
  {.image?}
  <figure class="figure">
      <img class="figure__image image js-lazy-image image--wide" data-img-src="{assetUrl}" data-variants="{systemDataVariants}" data-original-size="{originalSize}" />
  </figure>
  {.end}

{.end}




<!-- product information, like price and title -->
<div class="product-meta">
  {.section title}
    <p class="product-title p">{@}</p>
  {.end}

  {@|product-price}


  {.section body}
  <div class="product-description">
    {@}
  </div>
 {.end}

  {.excerpt?}
    <div class="product-excerpt p">
      {excerpt}
    </div>
  {.end}




</div>

 {@|product-checkout}

{@|product-status}

{.end}
